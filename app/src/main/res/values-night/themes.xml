

<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
<style name="Theme.Drustii" parent="Theme.Material3.DayNight.NoActionBar">
    <!-- Primary brand color.#5A5067 -->

    <item name="colorPrimary">#676F98</item>
    <item name="colorPrimaryVariant">#B3B1B1</item>
    <item name="colorOnPrimary">#EBE4E4E4</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">#C7CEFB</item>
    <item name="colorSecondaryVariant">#BBBDBF</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    <item name="android:navigationBarColor" tools:targetApi="l" >?attr/colorPrimary</item>
</style>
<style name="Theme.Drustii.Fullscreen" parent="Theme.Drustii">
    <item name="android:actionBarStyle">@style/Widget.Theme.Drustii.ActionBar.Fullscreen</item>
    <item name="android:windowActionBarOverlay">true</item>
    <item name="android:windowBackground">@null</item>
</style>

<style name="ThemeOverlay.Drustii.FullscreenContainer" parent="">
    <item name="fullscreenBackgroundColor">?attr/colorPrimary</item>
    <item name="fullscreenTextColor">@color/light_blue_A200</item>
</style>
</resources>