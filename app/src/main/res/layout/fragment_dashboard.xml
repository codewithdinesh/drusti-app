<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".account.dashboard.dashboardFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_bg_1"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/userProfileImgContainer"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="110dp"
                app:cardElevation="5dp">

                <ImageView
                    android:id="@+id/userProfileImg"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/ic_feeling_happy"
                    android:contentDescription="@string/user_image" />


            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/userName"
                    android:textAlignment="viewStart"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.12"
                    android:id="@+id/userUsername"
                    />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:backgroundTint="#BDCBD3"
                    android:letterSpacing="0.11"
                    android:padding="5dp"
                    android:text="@string/edit_profile"
                    android:textColor="@color/black"
                    android:id="@+id/edit_profile_btn"
                    android:textSize="13sp" />


            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>